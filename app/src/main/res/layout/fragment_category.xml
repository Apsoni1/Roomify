<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".feature.category.presentaition.screens.CategoryScreen">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



  <TextView
      android:layout_margin="15sp"
      android:textSize="19sp"
      android:paddingStart="45sp"
      android:textColor="@color/black"
      android:fontFamily="@font/roboto_bold"
      android:text="@string/string12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginBottom="30sp"
        android:background="@drawable/fav_category_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingHorizontal="20sp"
            android:layout_marginTop="32sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/starImg"
                android:padding="6sp"
                android:layout_marginTop="5sp"
                android:backgroundTint="@color/white"
                android:background="@drawable/curve_bg1"
                app:tint="#6772B0"
                android:src="@drawable/star_filled"
                android:layout_width="40sp"
                android:layout_height="40sp"></ImageView>
            <TextView
                android:layout_toEndOf="@+id/starImg"
                android:id="@+id/crowdfavTxt"
                android:fontFamily="sans-serif-medium"
                android:layout_marginHorizontal="10sp"
                android:textSize="25sp"
                android:layout_marginTop="-5dp"
                android:text="Crowd Favourites"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textSize="12sp"
                android:text="TO BUY"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/starImg"
                android:layout_marginHorizontal="12sp"
                android:layout_below="@+id/crowdfavTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerCategories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:clipToPadding="false"
                android:paddingHorizontal="53dp"
            />
            <RelativeLayout
                android:backgroundTint="@color/white"
                android:background="@drawable/curve_bg1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="55sp"
                android:layout_width="match_parent"
                android:clipToPadding="false"
                android:layout_marginHorizontal="68dp"
                android:layout_height="55sp">
                <TextView
                    android:textSize="25sp"
                    android:textColor="@color/LightGray"
                    android:fontFamily="@font/roboto_bold"
                    android:id="@+id/categoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginStart="25dp"
                    >

                </TextView>


                <LinearLayout
                    android:background="@drawable/curve_bg2"
                    android:backgroundTint="#049DA8"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10sp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
                    <ImageView
                        android:src="@drawable/arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="@color/white">

                    </ImageView>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dots_indicator"
                app:dotsColor="#525D96"
                app:dotsCornerRadius="9dp"
                app:dotsSize="14dp"
                app:dotsSpacing="3dp"
                app:dotsWidthFactor="1"
                app:selectedDotColor="#898EB8"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="62sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="5sp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:textColor="@color/DarkGray"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="65sp"
        android:text="@string/string13"
        android:textSize="19sp"
        android:layout_marginVertical="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    </LinearLayout>

</ScrollView>
</LinearLayout>