<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.category.presentaition.screens.CategoryScreen">

    <!-- ProgressBar to show during loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"/>

    <!-- Content layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_margin="15dp"
                    android:textSize="19sp"
                    android:paddingStart="45dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/string12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- ViewPager Section -->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/fav_category_bg"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:paddingHorizontal="20dp"
                        android:layout_marginTop="32dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/starImg"
                            android:padding="6dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/white"
                            android:background="@drawable/curve_bg1"
                            app:tint="#6772B0"
                            android:src="@drawable/star_filled"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                        <TextView
                            android:layout_toEndOf="@+id/starImg"
                            android:id="@+id/crowdfavTxt"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="25sp"
                            android:layout_marginTop="-5dp"
                            android:text="Crowd Favourites"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="12sp"
                            android:text="TO BUY"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/white"
                            android:layout_toEndOf="@+id/starImg"
                            android:layout_marginHorizontal="12dp"
                            android:layout_below="@+id/crowdfavTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="450dp">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerCategories"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="25dp"
                            android:clipToPadding="false"
                            android:paddingHorizontal="53dp" />

                        <RelativeLayout
                            android:backgroundTint="@color/white"
                            android:background="@drawable/curve_bg1"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="55dp"
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="68dp"
                            android:layout_height="55dp">

                            <TextView
                                android:textSize="25sp"
                                android:textColor="@color/LightGray"
                                android:fontFamily="@font/roboto_bold"
                                android:id="@+id/categoryTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="25dp" />

                            <LinearLayout
                                android:background="@drawable/curve_bg2"
                                android:backgroundTint="#049DA8"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp"
                                android:layout_alignParentBottom="true"
                                android:layout_width="25dp"
                                android:layout_height="25dp">

                                <ImageView
                                    android:src="@drawable/arrow_right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:tint="@color/white" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/dots_indicator"
                            app:dotsColor="#525D96"
                            app:dotsCornerRadius="9dp"
                            app:dotsSize="14dp"
                            app:dotsSpacing="3dp"
                            app:dotsWidthFactor="1"
                            app:selectedDotColor="#898EB8"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="62dp"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="5dp" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Grid Categories Section -->
                <TextView
                    android:textColor="@color/DarkGray"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="65dp"
                    android:text="@string/string13"
                    android:textSize="19sp"
                    android:layout_marginVertical="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:paddingHorizontal="16dp"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>
