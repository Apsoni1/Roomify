<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product Image -->
            <!-- Product Image with Wishlist Button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/productImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:contentDescription="Product Image" />
                </androidx.cardview.widget.CardView>

                <ImageButton
                    android:id="@+id/wishlistEmpty"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="12dp"
                    android:src="@drawable/favorite_empty"
                    android:background="@android:color/transparent"
                    android:contentDescription="Add to Wishlist" />

                <ImageButton
                    android:id="@+id/wishlistselected"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="12dp"
                    android:src="@drawable/baseline_favorite_24"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    android:contentDescription="Added to Wishlist"
                    app:tint="@color/wishlist_full" />
            </FrameLayout>

            <!-- Product Name -->
            <!-- Furniture Name -->
            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string21"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_gravity="start" />

            <!-- View in 3D Button below Furniture Name -->
            <Button
                android:id="@+id/viewIn3DButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string22"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/Blue"
                android:textColor="@color/white"
                android:layout_gravity="start" />


            <!-- Price and Discount Price -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Discount Price -->
                <TextView
                    android:id="@+id/discountPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string30"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGreen" />
                <!-- Original Price (Striked through) -->
                <TextView
                    android:id="@+id/originalPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string31"
                    android:textSize="16sp"
                    android:textColor="@color/fadegrey"
                    android:layout_marginStart="12dp"
                    />

            </LinearLayout>

            <!-- Short Description -->
            <TextView
                android:id="@+id/shortDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string23"
                android:textSize="16sp"
                android:textColor="@color/DarkGray"
                android:layout_marginTop="12dp" />

            <!-- Specifications Title -->
            <TextView
                android:id="@+id/specificationsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string24"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp" />

            <!-- Wood Type -->
            <TextView
                android:id="@+id/woodTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string25"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <!-- Finish -->
            <TextView
                android:id="@+id/finishTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string26"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <!-- Dimensions -->
            <TextView
                android:id="@+id/dimensionsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string27"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <!-- Weight -->
            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string28"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <!-- Stock Status -->
            <TextView
                android:id="@+id/stockStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string29"
                android:textSize="16sp"
                android:textColor="@color/lightGreen"
                android:layout_marginTop="4dp" />


            <!-- Tags Container -->
            <LinearLayout
                android:id="@+id/tagsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="start" />

            <!-- Full Description Title -->
            <TextView
                android:id="@+id/fullDescriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string32"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp" />

            <!-- Full Description -->
            <TextView
                android:id="@+id/fullDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string33"
                android:textSize="16sp"
                android:textColor="@color/fadegrey"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Add to Cart Button -->
            <Button
                android:id="@+id/addToCartButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/string34"
                android:textAllCaps="false"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- AR Fragment Container (overlay) -->
    <FrameLayout
        android:id="@+id/arFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>