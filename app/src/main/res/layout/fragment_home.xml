<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".Activity.MainActivity">
        <!--  Main container for all content  -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="20dp"
                    >
                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/search_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/imageButton"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        app:iconifiedByDefault="false"
                        app:queryHint="Sofa,Desk,Chair etc"
                        android:background="@drawable/search_shape" >

                    </androidx.appcompat.widget.SearchView><!-- Apply custom background -->

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/notification_icon"
                        app:tint="@color/Blue" />

                </RelativeLayout>
            <!--  Search Bar  -->

            <!--  HorizontalScrollView for Categories  -->
            <HorizontalScrollView
                android:id="@+id/horizontal_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:scrollbars="horizontal">

                <LinearLayout android:id="@+id/category_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal"/>
            </HorizontalScrollView>
            <RelativeLayout
                android:id="@+id/relativeLayoutForViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="10dp">

                <!-- Background ImageView -->
                <ImageView
                    android:id="@+id/Bg_image"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:src="@drawable/bg_viewpager"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"/>

                <!-- ViewPager2 on top of ImageView -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/discount_sale_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/Bg_image"
                    android:layout_alignParentStart="true"
                   />

                <!-- TabLayout on top of ImageView, below ViewPager2 -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discount_sale_viewpager"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@+id/discount_sale_viewpager"
                    android:padding="8dp"
                    app:tabIndicatorGravity="center"
                    app:tabIndicatorColor="@color/black"/>
            </RelativeLayout>

<!--            videoview display-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutForViewPager"
                android:layout_margin="8dp"
                android:background="@color/white"
                android:backgroundTintMode="screen"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Sales_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:paddingBottom="4dp"
                    android:text="AUGMENTED REALITY"
                    android:textColor="@color/BlueBlue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:gravity="center_horizontal"
                    android:text="Enhance your experiences by manifesting real-time Designing"
                    android:textColor="@color/BlackBlack"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <VideoView
                        android:id="@+id/Video_home"
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"

                        />

                </LinearLayout>


                <Button
                    android:id="@+id/Start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/LightBlue"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Shop Now"
                    android:textColor="@color/Blue"
                    android:textSize="12sp" />

            </LinearLayout>
<!--            sales card view display-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/home_1"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="4dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/home_2"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="6dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/home_3"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</FrameLayout>