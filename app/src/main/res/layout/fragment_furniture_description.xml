<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/furniture_detail_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string48"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string49"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvWoodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string50"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string51"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDimensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string52"
            android:layout_marginBottom="4dp" />
    </LinearLayout>
</ScrollView>
